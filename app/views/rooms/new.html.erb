<div class="container" style="margin-top: 80px;">
    <div class="row justify-content-center">
      <div class="col-md-offset-6 col-md-6 users-new-container bg-light" style="padding: 30px; border-radius: 30px;">
        <h1 class="text-center text-black">New room</h1>
          <%= form_for @room do |f| %>
            <div class="form-group ">
              <%= f.label :room_name,class: 'text-black' %>
              <%= f.text_field :room_name, autofocus: true, autocomplete: "room_name", class: 'form-control' %>
            </div>
            <div class="form-group ">
              <%= f.label :password,class: 'text-black' %>
              <%= f.password_field :password, autofocus: true, autocomplete: "password", class: 'form-control' %>
            </div>
            <div class="actions" style="padding:40px;">
              <%= f.submit "Sign up", class: 'btn-block btn-white' %>
            </div>
          <% end %>
      </div>
    </div>
   
</div>

