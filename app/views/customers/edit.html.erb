<div class="container" style="margin-top: 80px;">
    <div class="row justify-content-center">
      <div class="col-md-offset-6 col-md-6 users-new-container bg-light" style="padding: 30px; border-radius: 30px;">
        <h1 class="text-center text-black">Customer edit</h1>
          <%= form_for @customer do |f| %>
            <div class="form-group ">
              <%= f.label :customer_name %>
              <%= f.text_field :customer_name, class: 'form-control' %>
            </div>
            <div class="form-group ">
              <%= f.label :address %>
              <%= f.text_field :address, class: 'form-control' %>
            </div>
            <div class="form-group ">
              <%= f.label :phone_number %>
              <%= f.text_field :phone, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :memo %>
              <%= f.text_field :content, class: 'form-control' %>
            </div>
            <div class="form-group" style="padding:2px;">
              <%= f.label "買付日" %>
              <%= f.date_select :start_time, class: 'form-control' %>
            </div>
            <div class="form-group" style="padding:2px;">
              <%= f.label "契約日" %>
              <%= f.date_select :second_time, class: 'form-control' %>
            </div>
            <div class="form-group" style="padding:2px;">
              <%= f.label "本審査日" %>
              <%= f.date_select :third_time, class: 'form-control' %>
            </div>
            <div class="form-group" style="padding:2px;">
              <%= f.label "金消契約日" %>
              <%= f.date_select :fourth_time, class: 'form-control' %>
            </div>
            <div class="form-group" style="padding:2px;">
              <%= f.label "決済日" %>
              <%= f.date_select :end_time, class: 'form-control' %>
            </div>
            <div class="actions" style="padding:20px;">
              <%= f.submit "commit", class: 'btn-block btn-white' %>
            </div>
          <% end %>
          <div class="form-group">
              <p style="margin:5px;">この顧客情報を削除する場合は　<%= link_to "delete",customer_path(@customer.id), method: :delete %>　を押してください。</p>
          </div>
      </div>
    </div>
</div>
